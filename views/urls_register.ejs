<body>
  <div class="card text-center">
      <div class="card-header"></div>
      <div class="card-body">
        <h4 class="card-title"> User Registration </h4>
        <form action = "/register" method = "POST"> 
          <h5 style = > Email: 
            <input type = "email" name = "email" placeholder = "email@example.com" style="width: 320px; margin: 1em; margin-left: 60px; padding: 4px"/>
          </h5> 
          <h5> Password: 
            <input type = "password" name = "password" placeholder = "password" style="width: 320px; margin: 1em; padding: 4px"/>
          </h5> 
          <button type="submit" class="btn btn-primary"> Register </button>
        </form>
      </div>
    <div class="card-footer text-muted"></div>
  </div>
  
  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
